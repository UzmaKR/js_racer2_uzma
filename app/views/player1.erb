<div name="container">

  <h1> Player 1 login: </h1>
  <% if @player && @player.errors.any? %>
    <% @player.errors.full_messages.each do |err| %>
          <%= p err %>
    <% end %>
  <% end %>

  <form id="login" action="/player1" method="post" name="player1">
    <input type="text" name="player1[name]" placeholder="Name" required>
    <input type="email" name="player1[email]" placeholder="E-mail"required>
    <input type="submit" value="Start Game">
  </form>
</div>
